<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/webView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:focusable="true"
        android:nextFocusRight="@+id/edit_url"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:background="#2C2C2C"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="@string/menu_title"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/darker_gray"
            android:hint="@string/url_hint"
            android:inputType="textUri"
            android:nextFocusDown="@+id/button_save_url"
            android:nextFocusLeft="@+id/webView"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/button_save_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/custom_button_background"
            android:nextFocusDown="@+id/checkbox_ignore_ssl"
            android:nextFocusUp="@+id/edit_url"
            android:text="@string/save_url_button"
            android:textColor="@android:color/white"/>

        <CheckBox
            android:id="@+id/checkbox_ignore_ssl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:buttonTint="@android:color/white"
            android:nextFocusDown="@+id/button_language"
            android:nextFocusUp="@+id/button_save_url"
            android:text="@string/ssl_checkbox_label"
            android:textColor="@android:color/white" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#555555"/>

        <Button
            android:id="@+id/button_language"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_background"
            android:nextFocusDown="@+id/button_info"
            android:nextFocusUp="@+id/checkbox_ignore_ssl"
            android:text="@string/language_button"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/button_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/custom_button_background"
            android:nextFocusDown="@+id/button_close_menu"
            android:nextFocusUp="@+id/button_language"
            android:text="@string/info_button"
            android:textColor="@android:color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#555555"/>

        <Button
            android:id="@+id/button_close_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_background"
            android:nextFocusLeft="@+id/webView"
            android:nextFocusUp="@+id/button_info"
            android:text="@string/close_menu_button"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>