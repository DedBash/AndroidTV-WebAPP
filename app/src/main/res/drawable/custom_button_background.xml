<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Stil für den fokussierten Zustand -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#03A9F4"/> <!-- Helle Blaufärbung bei Fokus -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
    <!-- Standard-Stil -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#4A4A4A"/> <!-- Dunkelgrauer Standardhintergrund -->
            <corners android:radius="4dp"/>
        </shape>
    </item>
</selector>
